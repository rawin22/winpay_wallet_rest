@model Wallet.Pages.Shared.Components.PaymentCardsModel
@* Uses GPWebApi.DTO implicitly via the model *@

@{
    // Layout = null; // Components typically don't have a layout
}

<div class="d-flex align-items-center justify-content-between gap-8 pb-24 border-bottom">
    <h6 class="text-lg mb-0">Recent Payments</h6>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning alert-sm small p-2 mt-2" role="alert">
        <i class="ri-error-warning-line me-1"></i> @Model.ErrorMessage
    </div>
}

@if (Model.RecentPayments != null && Model.RecentPayments.Any())
{
    foreach (var payment in Model.RecentPayments)
    {
        // Determine direction and styling
        bool isOutgoing = Model.IsOutgoing(payment);
        bool isIncoming = Model.IsIncoming(payment);
        string iconClass = isOutgoing ? "ri-subtract-line" : (isIncoming ? "ri-add-fill" : "ri-exchange-funds-line"); // Send, Receive, Neutral
        string bgClass = isOutgoing ? "bg-danger-subtle text-danger-emphasis" : (isIncoming ? "bg-success-subtle text-success-emphasis" : "bg-secondary-subtle text-secondary-emphasis");
        string amountPrefix = isOutgoing ? "-" : (isIncoming ? "+" : "");

        <div class="d-flex align-items-center justify-content-between flex-wrap gap-8 py-16 border-bottom">
            <div class="d-flex align-items-center">
                <span class="w-40-px h-40-px @bgClass d-inline-flex justify-content-center align-items-center rounded-circle flex-shrink-0 me-12">
                    <i class="@iconClass text-xl"></i>
                </span>
                <div class="flex-grow-1 d-flex flex-column">
                    <span class="text-md mb-0 fw-medium text-primary-light d-block" title="@payment.PaymentReference">
                        @Model.GetCounterpartyAlias(payment)
                    </span>
                    <span class="text-xs mb-0 fw-normal text-secondary-light">
                        @Model.GetUserFriendlyStatus(payment.Status)
                        @* Optionally add date: @payment.CreatedTime?.ToString("dd MMM") *@
                    </span>
                </div>
            </div>
            <div class="d-flex flex-column text-end">
                <span class="text-md mb-0 fw-semibold text-primary-light d-block">
                    @amountPrefix@Model.GetFormattedAmount(payment)
                </span>
                @* <span class="text-xs mb-0 fw-normal text-secondary-light">@payment.CurrencyCode</span> *@ @* Currency included in formatted amount now *@
            </div>
        </div>
    }
}
else if (string.IsNullOrEmpty(Model.ErrorMessage)) // Only show if no error message is present
{
    <div class="text-center text-muted py-3 small">
        No recent payments found.
    </div>
}