@page
@model Wallet.Pages.ContactUsModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="card">
    <div class="card-body">

        <p>Provide feedback about the platform and connect with us</p>

        <div class="form-group">
            <label for="category">Category <span class="text-danger">*</span></label>
            <select class="form-control" id="category">
                <option>Please choose a category</option>
                <option>General Inquiry</option>
                <option>Technical Support</option>
                <option>Billing</option>
            </select>
        </div>

        <div class="form-group">
            <label for="subject">Subject <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="subject">
        </div>

        <div class="form-group">
            <label for="email">Email <span class="text-danger">*</span></label>
            <input type="email" class="form-control" id="email" value="ralf@winstantpay.com" readonly>
        </div>

        <div class="form-group">
            <label for="cc">CC</label>
            <input type="email" class="form-control" id="cc">
        </div>

        <div class="form-group">
            <label for="message">Message <span class="text-danger">*</span></label>
            <textarea class="form-control" id="message" rows="5"></textarea>
        </div>

        <div class="form-group">
            <label for="fileUpload">Attachment</label>
            <input type="file" class="form-control" id="fileUpload">
        </div>

        <button class="btn btn-success">
            <iconify-icon icon="ri-mail-send-line"></iconify-icon> Send Message
        </button>
    </div>
    <p>The basis is: <a href="https://wallet.winstantpay.com/ContactUs/Index" target="_blank">https://wallet.winstantpay.com/ContactUs/Index</a></p>
</div>
