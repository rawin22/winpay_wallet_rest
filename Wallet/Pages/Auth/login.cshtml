@page
@using System.Text.RegularExpressions
@model Wallet.Pages.Auth.LoginModel
@{
    Layout = "_Layout2";
    ViewData["script"] = @" <script>
    // ================== Password Show Hide Js Start ==========
    function initializePasswordToggle(toggleSelector) {
        $(toggleSelector).on('click', function() {
            $(this).toggleClass('ri-eye-off-line');
            var input = $($(this).attr('data-toggle'));
            if (input.attr('type') === 'password') {
                input.attr('type', 'text');
            } else {
                input.attr('type', 'password');
            }
        });
    }
    // Call the function
    initializePasswordToggle('.toggle-password');
    // ========================= Password Show Hide Js End ===========================
</script>";
}

<section class="auth bg-base d-flex flex-wrap">
    <div class="auth-left d-lg-block d-none">
        <div class="d-flex  flex-column h-100 ">
            <img src="~/images/auth/auth-img.png" alt="">
        </div>
    </div>
    <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
        <div class="max-w-464-px mx-auto w-100">
            <div>
                <a href="~/index" class="mb-40 max-w-290-px">
                    <img src="~/images/logo-light.png" alt="">
                </a>
                <h4 class="mb-12">@Model.Translate("Sign In to your Account")</h4>
                <p class="mb-32 text-secondary-light text-lg">@Model.Translate("Welcome back! Please enter your credentials.")</p>
            </div>
            <!-- Form starts here -->
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="icon-field mb-16">
                    <span class="icon top-50 translate-middle-y">
                        <iconify-icon icon="mage:email"></iconify-icon>
                    </span>
                    <!-- Bind email input to PageModel -->
                    <input type="text" name="Input.Username" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="Email" required />
                </div>
                <div class="position-relative mb-20">
                    <div class="icon-field">
                        <span class="icon top-50 translate-middle-y">
                            <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                        </span>
                        <!-- Bind password input to PageModel -->
                        <input type="password" name="Input.Password" class="form-control h-56-px bg-neutral-50 radius-12" id="your-password" placeholder="Password" required />
                    </div>
                    <span class="toggle-password ri-eye-line cursor-pointer position-absolute end-0 top-50 translate-middle-y me-16 text-secondary-light" data-toggle="#your-password"></span>
                </div>
                @* <div class=""> *@
                @*     <div class="d-flex justify-content-between gap-2"> *@
                @*         <div class="form-check style-check d-flex align-items-center"> *@
                @*             <input class="form-check-input border border-neutral-300" type="checkbox" id="remember" /> *@
                @*             <label class="form-check-label" for="remember">Remember me</label> *@
                @*         </div> *@
                @*         <a href="javascript:void(0)" class="text-primary-600 fw-medium">Forgot Password?</a> *@
                @*     </div> *@
                @* </div> *@

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32"> Sign In</button>

            </form>
            <!-- Form ends here -->
            <div class="row mt-3">
                <div class="col-auto me-auto">
                    <a href="@Model.GetForgotPasswordUrl()"> @Model.Translate("Forgot Password?")</a>
                </div>
                <div class="col-auto">
                    <a href="https://www.worldkyc.com/en/contact"> @Model.Translate("Contact Us")</a>
                </div>
            </div>
            <div class="col-md-8 mx-auto text-center">
                <div class="row mt-1 ml-1 text-secondary-light">
                    <span>@Model.CurrentLanguageNameSimplified @Model.Translate("has been selected as your default language. Change")</span>
                </div>
                <div class="dropdown mt-4">
                    <button class="btn btn-secondary text-sm dropdown-toggle align-items-center gap-2 w-100"
                            type="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            justify-content-center>

                        <!-- Flag icon -->
                        <span class="@($"fi fi-{Model.FlagCode}")"></span>
                        <!-- Language name -->
                        <span>@Model.CurrentLanguageNameSimplified</span>
                    </button>

                    <div class="dropdown-menu dropdown-menu-end p-3" style="min-width: 200px;">
                        <div class="mb-2 fw-bold">Choose Your Language</div>
                        @foreach (var language in Model.Languages)
                        {
                            <button class="dropdown-item d-flex align-items-center gap-2"
                                    type="button"
                                    onclick="changeLanguage('@language.Locale')">
                                <span class="@($"fi fi-{(language.FlagCode == "en" ? "us" : language.FlagCode)}")"></span>
                                <span class="text-secondary-light text-sm fw-semibold mb-0">
                                    @Model.GetMainLanguageName(language.Name)
                                </span>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        console.log('DOMContentLoaded');
        var translationsJson = '@Model.TranslationsJson';
        var currentLocale = '@Model.CurrentLocale';
        console.log(currentLocale);
        console.log(translationsJson);
        localStorage.setItem(`translations`, translationsJson);
    });

    function changeLanguage(locale) {
        console.log("HUGO1");
        fetch('/auth/login?handler=ChangeLanguage&locale=' + locale, {
            method: 'POST',
            headers: {
                'RequestVerificationToken': document.getElementsByName('__RequestVerificationToken')[0].value
            }
        })
            .then(response => {
                if (response.ok) {
                    window.location.reload(); // Reload the page
                } else {
                    console.error('Language change failed');
                }
            })
            .catch(error => console.error('Error:', error));
    }

</script>