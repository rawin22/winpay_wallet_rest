@page
@model Wallet.Pages.UserProfile.PasswordChangeModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title">Change Password</h2>
        <p>If you don't remember your current password, please <strong>log out</strong> and use the "Contact us" link on the login page.</p>

        <form method="post">
            <div class="form-group">
                <label for="oldPassword">Old Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="oldPassword" asp-for="Input.OldPassword" required>
                <span class="text-danger" asp-validation-for="Input.OldPassword"></span>
            </div>

            <div class="form-group">
                <label for="newPassword">New Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="newPassword" asp-for="Input.NewPassword" required>
                <span class="text-danger" asp-validation-for="Input.NewPassword"></span>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Repeat New Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="confirmPassword" asp-for="Input.ConfirmPassword" required>
                <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
            </div>

            <button type="submit" class="btn btn-success">Change Password</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3">
                @Model.ErrorMessage
            </div>
        }
        <!-- ✅ Show success message (green) if any -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success mt-3">
                @Model.SuccessMessage
            </div>
        }
    </div>
</div>
